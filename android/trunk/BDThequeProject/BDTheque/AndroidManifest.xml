<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tetram.bdtheque">

    <uses-sdk android:minSdkVersion="16"/>
    <application
        android:icon="@drawable/ic_app2"
        android:label="@string/app_name">

        <activity
            android:name=".gui.activities.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".gui.activities.RepertoireActivity"
            android:launchMode="singleTop">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/recherche"/>
        </activity>

        <activity android:name=".gui.activities.RepertoireActivity$FicheActivity"/>

        <activity android:name=".gui.activities.GestionActivity"/>

        <activity android:name=".gui.activities.SettingsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
