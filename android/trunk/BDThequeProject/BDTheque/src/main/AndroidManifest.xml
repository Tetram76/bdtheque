<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.tetram.bdtheque"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18"/>

    <application
        android:allowBackup="true"
        android:name=".BDThequeApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">

        <activity
            android:name="org.tetram.bdtheque.gui.activities.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="org.tetram.bdtheque.gui.activities.RepertoireActivity"
            android:launchMode="singleTop">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/recherche"/>
        </activity>

        <activity
            android:name="org.tetram.bdtheque.gui.activities.FicheActivity"
            android:parentActivityName=".RepertoireActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RepertoireActivity"/>
        </activity>

        <activity android:name="org.tetram.bdtheque.gui.activities.GestionActivity"/>

        <activity android:name="org.tetram.bdtheque.gui.activities.SettingsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>
</manifest>
