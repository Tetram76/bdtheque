<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="BDTKBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="BDTKTheme" parent="BDTKBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="sdlDialogStyle">@style/DialogStyleLight.Custom</item>
    </style>

    <style name="CustomRatingBar" parent="android:Widget.DeviceDefault.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="fiche_consultation" parent="android:Theme.Holo.Light">
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="fiche_label">
        <item name="android:textColor">#336699</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

