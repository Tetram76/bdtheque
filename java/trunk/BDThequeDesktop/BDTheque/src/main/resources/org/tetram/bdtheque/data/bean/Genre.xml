<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.tetram.bdtheque.data.dao.mappers.GenreMapper">
    <resultMap id="GenreLite" type="beanGenreLite">
        <id column="id_genre" property="id"/>
        <result column="genre" property="genre"/>
        <result column="quantite" property="quantite"/>
    </resultMap>

    <select id="getGenreLiteById" resultMap="GenreLite">
        <![CDATA[
        select
            id_genre, genre
        from
            genres
        where
            id_genre = #{id}
        ]]>
    </select>

    <select id="getListGenreBySerieId" resultMap="GenreLite" resultOrdered="true">
        <![CDATA[
        select
            g.id_genre, g.genre
        from
            genreseries s
            inner join genres g on
                g.id_genre = s.id_genre
        where
            s.id_serie = #{id}
        order by
            g.genre
        ]]>
    </select>

    <select id="checkUniqueGenreLite" resultMap="GenreLite">
        <![CDATA[
        select
            id_genre
        from
            genres
        where
            genre = #{genre}
        ]]>
        <if test="id != null">
            <![CDATA[
            and id_genre <> #{id}
            ]]>
        </if>
    </select>

    <insert id="createGenreLite">
        <selectKey keyProperty="id" order="BEFORE" resultType="UUID">
            <include refid="org.tetram.bdtheque.data.dao.mappers.autoIncKey"/>
        </selectKey>
        <![CDATA[
        insert into genres (id_genre, genre) values (#{id}, #{genre})
        ]]>
    </insert>

    <update id="updateGenreLite">
        <![CDATA[
        update genres set
          genre = #{genre}
        where
          id_genre = #{id}
        ]]>
    </update>

    <delete id="deleteGenreLite">
        <![CDATA[
        delete from genres where id_genre = #{id}
        ]]>
    </delete>
</mapper>