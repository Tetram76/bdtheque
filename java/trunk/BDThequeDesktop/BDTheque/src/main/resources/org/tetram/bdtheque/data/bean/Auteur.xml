<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.tetram.bdtheque.data.dao.mappers.AuteurMapper">
    <resultMap id="PersonneLite" type="beanPersonneLite">
        <id column="id_personne" property="id"/>
        <result column="NomPersonne" property="nom"/>
    </resultMap>
    <resultMap id="AuteurLite" type="beanAuteurLite">
        <association property="personne" resultMap="PersonneLite"/>
    </resultMap>
    <resultMap id="AuteurSerieLite" type="beanAuteurSerieLite" extends="AuteurLite">
        <result column="id_serie" property="idSerie"/>
        <result column="metier" property="metier"/>
    </resultMap>
    <resultMap id="AuteurAlbumLite" type="beanAuteurAlbumLite" extends="AuteurSerieLite">
        <result column="id_album" property="idAlbum"/>
    </resultMap>
    <resultMap id="AuteurParaBDLite" type="beanAuteurParaBDLite" extends="AuteurLite">
        <result column="id_parabd" property="idParaBD"/>
    </resultMap>
    <resultMap id="AuteurFull" type="beanAuteur">
        <id column="id_personne" property="id"/>
        <result column="NomPersonne" property="nomAuteur"/>
        <result column="SiteWeb" property="siteWeb"/>
        <result column="biographie" property="biographie"/>
        <!-- trop compliquÃ© pour un mapping: construite par le DAO
        <collection property="series"/>
        -->
    </resultMap>

    <select id="getListAuteurLiteByAlbumId" resultMap="AuteurAlbumLite">
        <![CDATA[
        select
            *
        from
            proc_auteurs(#{id}, null, null)
        ]]>
    </select>
    <select id="getListAuteurLiteBySerieId" resultMap="AuteurSerieLite">
        <![CDATA[
        select
            *
        from
            proc_auteurs(null, #{id}, null)
        ]]>
    </select>
    <select id="getListAuteurLiteByParaBDId" resultMap="AuteurParaBDLite">
        <![CDATA[
        select
            *
        from
            proc_auteurs(null, null, #{id})
        ]]>
    </select>
    <select id="getPersonneLiteById" resultMap="PersonneLite" parameterType="UUID">
        <![CDATA[
    select
        id_personne, nompersonne
    from
        personnes
    where
        id_personne = #{id}
    ]]>
    </select>
    <select id="getAuteurById" resultMap="AuteurFull" parameterType="UUID">
        <![CDATA[
        select
            id_personne, nompersonne, siteweb, biographie
        from
            personnes
        where
            id_personne = #{id}
    ]]>
    </select>

    <select id="checkUniqueAuteur" resultType="UUID">
        <![CDATA[
        select
            id_personne
        from
            personnes
        where
            nompersonne = #{nomAuteur}
        ]]>
        <if test="id != null">
            <![CDATA[
            and id_personne <> #{id}
            ]]>
        </if>
    </select>

    <sql id="saveAuteur">
        <![CDATA[
        update or insert into personnes (
            id_personne, nompersonne, siteweb, biographie
        ) values (
            #{id}, #{nomAuteur}, #{siteWeb}, #{biographie}
        )
        ]]>
    </sql>

    <insert id="createAuteur">
        <selectKey keyProperty="id" order="BEFORE" resultType="UUID">
            <include refid="org.tetram.bdtheque.data.dao.mappers.autoIncKey"/>
        </selectKey>
        <include refid="saveAuteur"/>
    </insert>

    <update id="updateAuteur">
        <include refid="saveAuteur"/>
    </update>

    <delete id="deleteAuteur">
        <![CDATA[
        delete from personnes where id_personne = #{id}
        ]]>
    </delete>

</mapper>
