<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="392.0" prefWidth="592.0"
      styleClass="scene" stylesheets="/org/tetram/bdtheque/gui/consultation/consultation.css"
      xmlns="http://javafx.com/javafx/8"
      fx:controller="org.tetram.bdtheque.gui.controllers.consultation.FicheAlbumController">
    <children>
        <GridPane hgap="4.0" vgap="4.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="50.0" minWidth="40.0"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true"
                           GridPane.rowSpan="2">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </ImageView>
                <Label styleClass="label-rubrique" text="Série :" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
                <Label styleClass="label-rubrique" text="Titre :" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="1"/>
                <Label fx:id="titreSerie" style="-fx-font-size: 13px; -fx-font-weight: bold;"
                       text="Sillage - Premières Armes" GridPane.columnIndex="2" GridPane.columnSpan="4"/>
                <Label fx:id="titreAlbum" style="-fx-font-size: 13px; -fx-font-weight: bold;" text="Esprit d'équipe"
                       GridPane.columnIndex="2" GridPane.columnSpan="4" GridPane.rowIndex="1"/>
                <Label styleClass="label-rubrique" text="Tome :" GridPane.columnSpan="2" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="2"/>
                <Label fx:id="tome" text="1" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                       GridPane.rowIndex="2"/>
                <Label styleClass="label-rubrique" text="Parution :" GridPane.columnSpan="2" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="3"/>
                <Label fx:id="dateParution" text="décembre 2014" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                       GridPane.rowIndex="3"/>
                <HBox alignment="CENTER_LEFT" spacing="4.0" GridPane.columnIndex="4" GridPane.rowIndex="2">
                    <children>
                        <CheckBox fx:id="integrale" mnemonicParsing="false" styleClass="label-rubrique" text="Intégrale"
                                  GridPane.columnIndex="4" GridPane.rowIndex="2"/>
                        <Label fx:id="integraleTomes" styleClass="label-rubrique" text="de...à..."/>
                    </children>
                </HBox>
                <CheckBox fx:id="horsSerie" mnemonicParsing="false" styleClass="label-rubrique" text="Hors série"
                          GridPane.columnIndex="4" GridPane.rowIndex="3"/>
                <Pagination maxWidth="212.0" minWidth="212.0" style="-fx-page-information-visible: false;"
                            styleClass="bullet" GridPane.columnIndex="5" GridPane.rowIndex="2" GridPane.rowSpan="3"/>
                <GridPane hgap="4.0" vgap="4.0" GridPane.columnSpan="5" GridPane.rowIndex="4">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="-Infinity"
                                           minWidth="-Infinity"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints valignment="TOP" vgrow="SOMETIMES"/>
                        <RowConstraints valignment="TOP" vgrow="SOMETIMES"/>
                        <RowConstraints valignment="TOP" vgrow="SOMETIMES"/>
                        <RowConstraints valignment="TOP" vgrow="SOMETIMES"/>
                        <RowConstraints valignment="TOP" vgrow="SOMETIMES"/>
                        <RowConstraints valignment="TOP" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label styleClass="label-rubrique" text="Univers"/>
                        <Label styleClass="label-rubrique" text="Genres" GridPane.rowIndex="1"/>
                        <Label styleClass="label-rubrique" text="Scénario" GridPane.rowIndex="2"/>
                        <Label styleClass="label-rubrique" text="Dessins" GridPane.rowIndex="3"/>
                        <Label styleClass="label-rubrique" text="Couleurs" GridPane.rowIndex="4"/>
                        <Label styleClass="label-rubrique" text="Série" GridPane.rowIndex="5"/>
                        <ListView fx:id="lvUnivers" maxHeight="48.0" minHeight="48.0" GridPane.columnIndex="1"/>
                        <ListView fx:id="lvGenres" layoutX="57.0" layoutY="10.0" maxHeight="48.0" minHeight="48.0"
                                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <ListView fx:id="lvScenaristes" layoutX="57.0" layoutY="58.0" maxHeight="48.0" minHeight="48.0"
                                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <ListView fx:id="lvDessinateurs" layoutX="57.0" layoutY="106.0" maxHeight="48.0"
                                  minHeight="48.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <ListView fx:id="lvColoristes" layoutX="57.0" layoutY="154.0" maxHeight="48.0" minHeight="48.0"
                                  GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                        <ListView layoutX="57.0" layoutY="202.0" maxHeight="48.0" minHeight="48.0"
                                  GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    </children>
                </GridPane>
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
    </padding>
</VBox>
