<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
      fx:controller="org.tetram.bdtheque.gui.controllers.gestion.FicheAuteurController">
    <AnchorPane>
        <children>
            <fx:include source="../components/buttonsbar.fxml" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
        </children>
    </AnchorPane>
    <Separator prefWidth="200.0"/>
    <children>
        <VBox alignment="TOP_CENTER" minWidth="-Infinity" prefHeight="390.0" prefWidth="766.0" styleClass="scene">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
            <children>
                <GridPane hgap="4.0" vgap="4.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity"/>
                        <ColumnConstraints fillWidth="false" hgrow="NEVER"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                    <children>
                        <Label styleClass="label-rubrique" text="Nom :" GridPane.halignment="RIGHT"/>
                        <TextField fx:id="tfNom" text="Label" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
                        <Label styleClass="label-rubrique" text="Site web :" GridPane.halignment="RIGHT"
                               GridPane.rowIndex="1"/>
                        <TextField fx:id="tfSiteWeb" minWidth="-Infinity" GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>
                        <Label fx:id="lbSiteWeb" text="Label" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <Label styleClass="label-rubrique" text="Biographie :" GridPane.halignment="RIGHT"
                               GridPane.rowIndex="2" GridPane.valignment="TOP"/>
                        <TextArea fx:id="taBiographie" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                  GridPane.rowIndex="2"/>
                        <Label styleClass="label-rubrique" text="Associations :" GridPane.halignment="RIGHT"
                               GridPane.rowIndex="4" GridPane.valignment="TOP"/>
                        <TextArea fx:id="taAssociations" GridPane.columnIndex="1" GridPane.columnSpan="2"
                                  GridPane.rowIndex="4"/>
                        <Separator maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" GridPane.columnSpan="3"
                                   GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER"/>
                    </children>
                </GridPane>
            </children>
            <stylesheets>
                <URL value="@../theme.css"/>
                <URL value="@gestion.css"/>
            </stylesheets>
        </VBox>
    </children>
</VBox>
