<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="500.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tetram.bdtheque.gui.controllers.PreferencesController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="NEVER" />
    </rowConstraints>
    <children>
        <TabPane tabClosingPolicy="UNAVAILABLE" tabMinHeight="32.0">
            <tabs>
                <Tab fx:id="tabOptionsDiverses" text="Options diverses">
                    <content>
                        <Accordion layoutX="98.0" layoutY="50.0">
                            <panes>
                                <TitledPane animated="false" text="Général">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="167.0" prefWidth="448.0">
                                 <children>
                                    <ChoiceBox fx:id="formatTitreAlbum" layoutX="14.0" layoutY="108.0" />
                                    <CheckBox layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="Saisie obligatoire d'une série pour les ablums et les achats" />
                                    <CheckBox layoutX="14.0" layoutY="38.0" mnemonicParsing="false" text="Saisie obligatoire d'une série pour les para-bd" />
                                    <CheckBox layoutX="14.0" layoutY="62.0" mnemonicParsing="false" text="Utiliser l'anti-aliasing pour redimensionner les images" />
                                    <Label layoutX="14.0" layoutY="91.0" text="Format d'affichage des titres d'albums :" />
                                 </children></AnchorPane>
                                    </content>
                                </TitledPane>
                                <TitledPane animated="false" text="Impression">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                                    </content>
                                </TitledPane>
                                <TitledPane animated="false" text="Mode Gestion">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <CheckBox layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="Images stockées dans la base par défaut" />
                                    <Label layoutX="14.0" layoutY="39.0" text="Répertoire de stockage des images :" />
                                    <TextField layoutX="14.0" layoutY="56.0" />
                                 </children></AnchorPane>
                                    </content>
                                </TitledPane>
                            </panes>
                        </Accordion>
                    </content>
                </Tab>
                <Tab fx:id="tabMonnaies" text="Monnaies">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            <Tab fx:id="tabSiteWeb" text="Site web">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            </tabs>
        </TabPane>
        <ToolBar nodeOrientation="RIGHT_TO_LEFT" GridPane.rowIndex="1">
            <items>
                <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#btnQuitClick" text="Annuler" />
                <Button fx:id="btnOk" defaultButton="true" mnemonicParsing="false" onAction="#btnQuitClick" text="Ok" />
            </items>
        </ToolBar>
    </children>
</GridPane>
