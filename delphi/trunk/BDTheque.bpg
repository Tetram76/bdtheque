BD.exe: BD.exe\BD.dpr
  $(DCC)

BDT_UDF.dll: BDT_UDF.DLL\BDT_UDF.dpr
  $(DCC)

BDPic.dll: BDPic.DLL\BDPic.dpr
  $(DCC)


